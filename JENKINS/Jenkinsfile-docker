pipeline {
    agent {
        docker {
            image 'maven:3.9.11-eclipse-temurin-21'
            args '''
                -v $HOME/.m2:/root/.m2:z
                -u root
            '''
        }
    }


    stages {
        stage('Maven version') {
            steps {
                sh 'mvn -version'
            }
        }
    }
}
