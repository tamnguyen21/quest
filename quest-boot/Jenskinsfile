pipeline {
    agent any

    stages {

        stage('Build') {
            agent {
                docker {
                    image "maven:3.9.11-eclipse-temurin-21"
                    args '''
                        -v $HOME/.m2:/root/.m2
                        -u root
                        --network devops
                    '''
                    reuseNode true
                }
            }

            stages {

                stage('SCM') {
                    steps {
                        checkout scm
                    }
                }

                stage('Analyse Sonar') {
                    steps {
                        dir('quest-boot') {
                            script {
                                // Attention : tool 'SonarQube' n'est pas un scanner, Ã  remplacer par SonarScanner CLI
                                def scannerHome = tool 'SonarScanner'
                                withSonarQubeEnv('SonarQube') {
                                    sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=quest-boot"
                                }
                            }
                        }
                    }
                }

                stage('Build Boot') {
                    steps {
                        dir('quest-boot') {
                            sh "mvn -version"
                            sh "mvn package"
                        }
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('quest-boot') {
                    sh "docker build -t ajc/quest:boot ."
                }
            }
        }

        stage('Docker Deploy') {
            steps {
                dir('DOCKER/commandes/compose/quest') {
                    sh "docker compose up -d boot"
                }
            }
        }
    }
}
